{
  "name": "react-ssr-hmr",
  "version": "1.0.0",
  "main": "server",
  "license": "MIT",
  "scripts": {
    "start": "rm -rf ./.build && ./node_modules/.bin/npm-run-all --parallel server:dev build:dev",
    "start:prod": "./node_modules/.bin/npm-run-all --parallel server:prod build:prod",
    "server:dev": "rm -rf ./build && cross-env NODE_ENV=development BUILD_TARGET=server ./node_modules/.bin/webpack --config ./webpack/server.config.js",
    "server:prod": "cross-env NODE_ENV=production BUILD_TARGET=server ./node_modules/.bin/babel-node ./server/ --presets env",
    "build:dev": "cross-env NODE_ENV=development BUILD_TARGET=client ./node_modules/.bin/webpack-dev-server --config ./webpack/client.dev.config.js --watch --hot",
    "build:prod": "cross-env NODE_ENV=production BUILD_TARGET=client ./node_modules/.bin/webpack --config ./webpack/client.prod.config.js",
    "dev:server": "cross-env ./node_modules/.bin/webpack-dev-server --config webpack/dev.config.js --inline --hot",
    "precommit": "./node_modules/.bin/lint-staged",
    "postcommit": "git update-index --again",
    "prettify": "./node_modules/.bin/prettier --write ./app/**/*.js ./server/**/*.js",
    "lint:styles": "./node_modules/.bin/stylelint './app/**/*.js'",
    "lint:scripts": "./node_modules/.bin/eslint --fix"
  },
  "lint-staged": {
    "**/*.js": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint --fix",
      "./node_modules/.bin/stylelint './app/**/*.js'",
      "git add"
    ]
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-styled-components": "^1.5.0",
    "babel-plugin-webpack-alias": "^2.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "circular-dependency-plugin": "^4.4.0",
    "cross-env": "^5.1.3",
    "koa": "^2.4.1",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.2",
    "npm-run-all": "^4.1.2",
    "polished": "^1.9.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "styled-components": "^3.1.6"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-eslint": "^8.2.1",
    "eslint": "^4.18.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.6.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.1",
    "prettier": "^1.10.2",
    "react-hot-loader": "^3.1.3",
    "start-server-webpack-plugin": "^2.2.1",
    "stylelint": "^9.0.0",
    "stylelint-config-standard": "^18.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.2.2",
    "uglifyjs-webpack-plugin": "^1.2.0",
    "webpack": "^3.10.0",
    "webpack-cleanup-plugin": "^0.5.1",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.1",
    "webpack-node-externals": "^1.6.0"
  }
}
